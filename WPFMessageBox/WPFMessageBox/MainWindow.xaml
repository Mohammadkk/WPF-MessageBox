<Window x:Name="window" x:Class="WPFMessageBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMessageBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="73.6"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto" MinHeight="100"/>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Rectangle Stroke="#B2000000" RadiusX="5" RadiusY="5" Grid.RowSpan="6" Fill="#FFFF8D8D" Grid.ColumnSpan="3"/>
        <Border x:Name="borderTitle" BorderBrush="#4C000000" BorderThickness="0,0,0,1" Grid.RowSpan="2" CornerRadius="5,5,0,0" Background="#33FFFFFF" MouseLeftButtonDown="txtTitle_MouseLeftButtonDown" Grid.ColumnSpan="3" Margin="0,0,0,0.2">
            <TextBlock x:Name="txtTitle" TextWrapping="Wrap" Text="Message Box" Padding="10,0" FontWeight="Bold" FontFamily="Tahoma" VerticalAlignment="Center" MouseLeftButtonDown="txtTitle_MouseLeftButtonDown"/>
        </Border>
        <Image x:Name="image" Height="64" Margin="10,0,0,0" Grid.Row="3" MaxWidth="64" Source="images/Information 2.png" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtMessage" Grid.Column="1" Margin="0" Grid.Row="3" TextWrapping="Wrap" Padding="5,10,0,0" SizeChanged="txtMessage_SizeChanged" MinHeight="100" TextAlignment="Justify" LineHeight="20"/>
        <Button x:Name="btn1" Content="Button" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Grid.Column="1" Margin="0,0.8,0.4,0" Grid.Row="5" Height="30" Click="btn1_Click"/>
        <Button x:Name="btn2" Content="Button" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Grid.Column="1" Margin="0,0.8,85.4,0" Grid.Row="5" Height="30" Click="btn2_Click"/>
        <Button x:Name="btn3" Content="Button" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Grid.Column="1" Margin="0,0.8,170.4,0" Grid.Row="5" Height="30"/>

    </Grid>
</Window>
